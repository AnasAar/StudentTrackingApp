<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="16dp"
    >

    <ImageView
        android:id="@+id/imageDevoir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_prof_male_1_"
        />

    <TextView
        android:id="@+id/NomProf"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/imageDevoir"
        android:text="NomProf"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/MessageBrief"
        android:layout_below="@+id/NomProf"
        android:layout_toRightOf="@+id/imageDevoir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:text="Résumé du message"
        android:textColor="@color/white"

        />
    <TextView
        android:id="@+id/DateMessg"

        android:layout_toRightOf="@+id/MessageBrief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:text="17/05/2022 18:00 "
        android:textColor="@color/white"

        />

</RelativeLayout>