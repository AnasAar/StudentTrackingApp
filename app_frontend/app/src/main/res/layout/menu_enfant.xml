<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262d49">

    <View
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/bluewish"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="20dp"
                android:layout_marginTop="10dp"

                app:columnCount="1"
                app:rowCount="5">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:backgroundTint="#263461"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"


                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="11dp"
                                android:layout_weight="1"
                                android:src="@drawable/icon_infos_white_24" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="12dp"
                                android:fontFamily="sans-serif"
                                android:text="Informations"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold|normal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/NomEtudiant"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_margin="12dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="Nom :"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"


                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">




                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/ClasseEtudiant"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_margin="12dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="Classe :"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"


                                    />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:backgroundTint="#263461"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_devoirs_50"

                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/Devoirs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_margin="12dp"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="Devoirs"
                                android:textColor="@color/white"
                                android:textSize="25sp"


                                />

                            <TextView
                                android:id="@+id/VoirDevoirs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_margin="6dp"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="  Voir les devoirs"
                                android:textColor="#7886a3"
                                android:textSize="14sp"
                                android:textStyle="bold"


                                />
                        </LinearLayout>

                        <Button
                            android:id="@+id/access_devoirs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:textAllCaps="false"
                            android:backgroundTint="@color/bluewish"
                            android:text="Accéder"
                            app:icon="@drawable/ic_access_arrow_white" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:backgroundTint="#263461"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/imageAbsences"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_sleep_svgrepo_com"

                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/Absences"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_margin="12dp"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="Absences"
                                android:textColor="@color/white"
                                android:textSize="25sp"


                                />

                            <TextView
                                android:id="@+id/VoirAbsences"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_margin="6dp"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="  Voir la présence"
                                android:textColor="#7886a3"
                                android:textSize="14sp"
                                android:textStyle="bold"


                                />
                        </LinearLayout>

                        <Button
                            android:id="@+id/access_absences"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="17dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:textAllCaps="false"
                            android:backgroundTint="@color/bluewish"
                            android:text="Accéder"
                            app:icon="@drawable/ic_access_arrow_white" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:backgroundTint="#263461"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/NotesIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_notes_50"

                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/NotesText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_margin="12dp"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="Notes"
                                android:textColor="@color/white"
                                android:textSize="25sp"


                                />

                            <TextView
                                android:id="@+id/VoirNotes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_margin="6dp"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="  Voir les notes"
                                android:textColor="#7886a3"
                                android:textSize="14sp"
                                android:textStyle="bold"


                                />
                        </LinearLayout>

                        <Button
                            android:id="@+id/AccessNotes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:textAllCaps="false"
                            android:backgroundTint="@color/bluewish"
                            android:text="Accéder"
                            app:icon="@drawable/ic_access_arrow_white" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:backgroundTint="#263461"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/ProfsIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_profs_1"

                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/ProfsText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_margin="12dp"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="Professeurs"
                                android:textColor="@color/white"
                                android:textSize="25sp"


                                />

                            <TextView
                                android:id="@+id/VoirProfs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_margin="6dp"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text=" Voir les Professeurs"
                                android:textColor="#7886a3"
                                android:textSize="14sp"
                                android:textStyle="bold"


                                />
                        </LinearLayout>

                        <Button
                            android:id="@+id/access_profs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:textAllCaps="false"
                            android:backgroundTint="@color/bluewish"
                            android:text="Accéder"
                            app:icon="@drawable/ic_access_arrow_white" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </GridLayout>
        </RelativeLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="161dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Menu Enfant"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view5"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>